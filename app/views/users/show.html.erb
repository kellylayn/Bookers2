<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/info', user: @user,book:@book %>

    </div>



    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
          <%= link_to user_path(book.user.id) do %>
            <td><%= image_tag book.user.get_profile_image, size: '80x80' %></td>
          <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>