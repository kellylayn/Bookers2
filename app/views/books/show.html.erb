

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user,book:@new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <%= link_to user_path(@book.user.id) do %>
        <p><%= image_tag @book.user.get_profile_image, size: '100x100' %></p>
      <% end %>
      <p><%= link_to @book.title, book_path(@book.id) %></p>
      <p><%= @book.body %></p>
      <% if @book.favorited_by?(current_user) %>
        <p>
          <%= link_to book_favorites_path(@book), method: :delete do %>
            ♥<%= @book.favorites.count %>
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to book_favorites_path(@book), method: :post do %>
            ♡<%= @book.favorites.count %>
          <% end %>
        </p>
      <% end %>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path, method: :delete %>
      <% end %>
      <div>
        <p>コメント件数：<%= @book.book_comments.count %></p>
        <% if @book_comment.errors.any? %>
          <%= @book_comment.errors.count %>errors prohibited this book from being saved:
          <ul>
            <% @book_comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <% @book.book_comments.each do |book_comment| %>
          <p><%= image_tag book_comment.user.get_profile_image, size: '100x100' %></p>
          <!--<p>%= image_tag book_comment.user.get_profile_image(100,100) %</p>-->
          <%= book_comment.user.name %>
          <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
      <p><%= link_to @book.user.name,user_path(@book.user.id) %></p>
  </div>
</div>